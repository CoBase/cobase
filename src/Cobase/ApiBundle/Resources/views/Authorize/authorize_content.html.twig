{% block content %}
<div class="row-fluid login">
    <div class="dialog">

        <h1 class="frontLogo">{{ site_title }}</h1>

        <div class="block" style="padding: 10px">
            <div class="block-header">
                <h2>The application "{{ client.name }}" would like to connect to your account</h2>
            </div>
            <form action="{{ path('fos_oauth_server_authorize') }}" method="POST" class="fos_oauth_server_authorize" {{ form_enctype(form) }}>
                <div id="fos_user_login_form">
                    {{ form_row(form.client_id) }}
                    {{ form_row(form.response_type) }}
                    {{ form_row(form.redirect_uri) }}
                    {{ form_row(form.state) }}
                    {{ form_row(form.scope) }}
                    {{ form_rest(form) }}
                    <input class="btn btn-danger" type="submit" name="rejected" value="{{ 'authorize.reject'|trans({}, 'FOSOAuthServerBundle') }}" />
                    <input class="btn btn-success" type="submit" name="accepted" value="{{ 'authorize.accept'|trans({}, 'FOSOAuthServerBundle') }}" />
                </div>
            </form>
        </div>
    </div>
</div>

{% endblock %}