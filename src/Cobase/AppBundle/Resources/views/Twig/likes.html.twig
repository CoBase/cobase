<span class="like-container">
    {% if user %}
        {% if user.likesPost(post) %}
            <i class="thumb icon-thumbs-down"></i>
            <a class="like-link" data-liked="true" data-postid="{{ post.id }}" href="">{{ 'Unlike'|trans }}</a>
        {% else %}
            <i class="thumb icon-thumbs-up"></i>
            <a class="like-link" data-liked="false" data-postid="{{ post.id }}" href="">{{ 'Like'|trans }}</a>
        {% endif %}
    {%  endif %}    
    
    <span class="like-container">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <a href="#" rel="tooltip" data-original-title="" class="like-count" data-postid="{{ post.id }}">
        {% endif %}
        {% if user == null %}
            {{ likeCount }} like(s)
        {% else %}
            {{ likeCount }}
        {% endif %}
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            </a>
        {% endif %}
    </span>

</span>